<head>
    <link rel="stylesheet" href="/css/bill-manage.css">
</head>
<div class="bill">
    <div class="bill__title">
        <div class="bill__title-status">
            <span>Trạng thái sẩn phẩm</span>
            <select name="statusAll" id="statusAll" onchange="changeFunc();">
                <option value="pendingAll" selected="selected">Đang chờ xử lí</option>
                <option value="deliveringAll">Đang giao hàng</option>
                <option value="deliveredAll">Đã giao hàng</option>
            </select>
        </div>
        <button class="bill__title-update-status" id="update-status-btn">Cập nhật ✔</button>
    </div>
    <div class="bill__details">
        <table class="bill__details-table">
            <thead>
                <tr>
                    <td>Tên 😍</td>
                    <td>Địa chỉ ⛪</td>
                    <td>Số điện thoại📱</td>
                    <td>Thông tin sản phẩm🛒</td>
                    <td>Tổng thanh toán💲</td>
                    <td>Trạng thái sản phẩm</td>
                </tr>
            </thead>
            <tbody id='listOrderBody'>


            </tbody>
        </table>
    </div>
</div>
<script src="/javascripts/bill-manage.js"></script>