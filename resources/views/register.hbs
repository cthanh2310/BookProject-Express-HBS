<head>
    <link rel="stylesheet" href="/css/login.css">
</head>
<div class="grid wide">
    <div class="row auth-form__row">

        <div class="col l-6 auth-form__row--center">
            <div class="auth-form">
                <form action="/auth/register" method="post" id="register_form" class="auth-form__app__container">
                    <div class="auth-form__header">
                        <h3 class="auth-form__heading">Đăng ký</h3>
                        <a href="/auth/login" class="auth-form__switch-btn">Đăng nhập</a>
                    </div>
                    <div class="auth-form__form">
                        <div class="auth-form__group">
                            <input required type="text" placeholder="Email của bạn" name="email" id="email"
                                class="auth-form__input">
                            <span id="wrong-email" class="span-validate"></span>
                        </div>
                        <div class="auth-form__group">
                            <input required type="password" placeholder="Mật khẩu của bạn" name="password" id="password"
                                class="auth-form__input">
                            <span id="wrong-password" class="span-validate"></span>
                        </div>
                        <div class="auth-form__group">
                            <input required type="password" placeholder="Nhập lại mật khẩu" name="confirmPassword"
                                id="confirmPassword" class="auth-form__input">
                            <span id="wrong-confirm-password" class="span-validate"></span>
                        </div>
                    </div>
                    <div class="auth-form__policy">
                        <div class="auth-form__policy-description">
                            <p class="auth-form__policy-description-p">
                                Bằng việc đăng ký, bạn đã đồng ý với chúng tôi về <a href="#"
                                    class="auth-form__policy-description-a">Điều khoản dịch vụ</a>
                                <span>& </span> <a href="#" class="auth-form__policy-description-a">Chính sách bảo
                                    mật</a>
                            </p>
                        </div>
                    </div>
                    <div class="auth-form__controls">
                        <a href="/" class=" btn--back btn--normal ">TRỞ LẠI</a>
                        <button id="register" class="auth-form__controls-button btn--primary">ĐĂNG KÝ</button>
                    </div>
                </form>
                <div class="auth-form__socials">
                    <a href="" class="auth-form__socials--facebook">
                        <i class="fab fa-facebook-square auth-form__socials-icon"></i>
                        <span class="auth-form__socials-title auth-form__socials-title--span">Kết nối với
                            Facebook</span>
                    </a>
                    <a href="" class="auth-form__socials--google">
                        <i class="fab fa-google auth-form__socials-icon"></i>
                        <span class="auth-form__socials-title">Kết nối với Google</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/javascripts/register.js"></script>